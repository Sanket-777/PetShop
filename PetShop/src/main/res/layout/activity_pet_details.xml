<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pet_details_backbgound"
    android:orientation="vertical"
    tools:context=".PetDetails">


    <androidx.cardview.widget.CardView
        android:id="@+id/petimagecardview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@color/Black"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/PET_IMAGE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.card.MaterialCardView

        android:id="@+id/cardview2"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:backgroundTint="#F1AC96"
        app:cardCornerRadius="35dp"
        app:strokeColor="@color/nav_item_state_list"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <!--            for key    -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Name      :"
                    android:fontFamily=""
                    android:textColor="@color/Black"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/font10"
                    android:layout_height="wrap_content"
                    android:text="  Age            :"
                    android:textColor="@color/Black"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Cost          :"
                    android:fontFamily="@font/font10"
                    android:textColor="@color/Black"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Gender    :"
                    android:fontFamily="@font/font10"
                    android:textColor="@color/Black"
                    android:textSize="25dp" />


            </LinearLayout>
            <!--            for values -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/PET_NAME"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Carry"
                    android:fontFamily="@font/font9"
                    android:textColor="@color/Black"
                    android:textSize="27dp" />

                <TextView
                    android:id="@+id/PET_AGE"
                    android:layout_weight="1"
                    android:fontFamily="@font/font9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 18 MOnths"
                    android:textColor="@color/Black"
                    android:textSize="27dp" />

                <TextView
                    android:id="@+id/PET_COST"
                    android:layout_weight="1"
                    android:fontFamily="@font/font9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8000Rs"
                    android:textColor="@color/Black"
                    android:textSize="27dp" />

                <TextView
                    android:id="@+id/PET_GENDER"
                    android:layout_weight="1"
                    android:fontFamily="@font/font9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@color/Black"
                    android:textSize="27dp" />

            </LinearLayout>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/call_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/skyblue_bg"
        android:text="Call Owner" />


</LinearLayout>